# sudo vim /etc/nginx/sites-available/budget.brianbrown.dev
# sudo ln -s /etc/nginx/sites-available/budget.brianbrown.dev /etc/nginx/sites-enabled/budget.brianbrown.dev
# sudo systemctl restart nginx

server {
        listen 80;
        listen [::]:80;

        server_name budget.brianbrown.dev;
        if ($http_x_forwarded_proto = "http") {
            return 301 https://$server_name$request_uri;
        }

        root /var/www/budget-web;

        index index.html index.htm index.nginx-debian.html;

        location / {
            try_files $uri$args $uri$args/ $uri $uri/ /index.html =404;
        }

        # letsencrypt well known
        location ~ /.well-known {
            allow all;
        }
}

